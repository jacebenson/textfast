{
  "manifest_version": 2,

  "author": "Matheus Faustino",
  "developer": {
    "name": "Matheus Faustino",
    "url": "https://github.com/matheusfaustino"
  },

  "name": "TextFast",
  "version": "1.0.0",
  "description": "It gives you opportunity of replacing boring words with easier ones or type memes fasters ¯\\_[ツ]_/¯ (shrug).",

  "permissions": ["activeTab", "storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["text-replacer.js"]
    }
  ],

  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
        "id": "textfaster@matheusfaustino.com",
        "strict_min_version": "42.0"
    }
  }
}
